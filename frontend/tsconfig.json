{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "frontend/src/**/*.d.ts",
    "frontend/src/**/*.ts",
    "frontend/src/**/*.js",
    "frontend/src/**/*.svelte"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
